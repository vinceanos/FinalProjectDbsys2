@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Add any additional CSS styles for your Home page here -->
    <style>
        /* Custom CSS styles for the home page */
        .box-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }

        .box {
            width: calc(33.33% - 20px);
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            text-align: center;
            transition: all 0.3s ease;
        }

            .box:hover {
                transform: scale(1.05);
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            }

            .box img {
                max-width: 100%;
                height: auto;
                border-radius: 5px;
                margin-bottom: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>Featured Destinations</h2>
        <div class="box-container" id="box-container">
            <!-- JavaScript will populate boxes here -->
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
        $(document).ready(function () {
            // Destination data for the boxes
            var destinations = [
                { id: 1, title: "Destination 1", imageUrl: "~/Images/destination1.jpg" },
                { id: 2, title: "Destination 2", imageUrl: "~/Images/destination2.jpg" },
                { id: 3, title: "Destination 3", imageUrl: "~/Images/destination3.jpg" },
                { id: 4, title: "Destination 4", imageUrl: "~/Images/destination4.jpg" },
                { id: 5, title: "Destination 5", imageUrl: "~/Images/destination5.jpg" },
                { id: 6, title: "Destination 6", imageUrl: "~/Images/destination6.jpg" },
                { id: 7, title: "Destination 7", imageUrl: "~/Images/destination7.jpg" },
                { id: 8, title: "Destination 8", imageUrl: "~/Images/destination8.jpg" },
                { id: 9, title: "Destination 9", imageUrl: "~/Images/destination9.jpg" }
            ];

            // Populate boxes using destination dataS
            var boxContainer = $("#box-container");
            destinations.forEach(function (destination) {
                var box = $('<div class="box"></div>');
                var image = $('<img src="' + destination.imageUrl + '" alt="' + destination.title + '">');
                var title = $('<h3>' + destination.title + '</h3>');
                box.append(image);
                box.append(title);
                boxContainer.append(box);
            });

            // Add click event to navigate to destination detail page
            $(".box").on("click", function () {
                var destinationId = $(this).index() + 1;
                window.location.href = '@Url.Action("DestinationDetail", "Home")' + '?id=' + destinationId;
            });
        });
    </script>
</body>
</html>
