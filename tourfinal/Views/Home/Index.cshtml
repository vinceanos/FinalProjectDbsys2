@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Add any additional CSS styles for your Home page here -->
    <style>
        body {
            background-image: url('/image/white2.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif; /* Specify the Google Font 'Poppins' */
        }

        .container {
            padding-top: 50px; /* Add padding to the top of the container */
        }

        h2 {
            text-align: center; /* Center-align the heading */
            margin-bottom: 20px; /* Add space below the heading */
            font-size: 36px; /* Adjust the font size */
            color: #333; /* Set the font color */
            text-transform: uppercase; /* Convert text to uppercase */
            letter-spacing: 2px; /* Add letter spacing for better readability */
            font-weight: bold; /* Make the font bold */
        }

        .box-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin-top: 20px;
        }

        .box {
            width: calc(33.33% - 20px);
            margin-bottom: 20px;
            padding: 20px;
            border: 3px solid #ccc;
            border-radius: 5px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .box:hover {
                transform: scale(1.05) perspective(1000px) rotateX(0deg) rotateY(0deg); /* Reset to initial tilt */
                box-shadow: 0 0 20px rgba(0, 80, 225, 0.7);
            }

            .box img {
                width: 100%;
                height: 200px;
                object-fit: cover;
                border-radius: 5px;
                margin-bottom: 10px;
                transition: transform 0.3s ease;
            }

            .box:hover img {
                transform: scale(1.2); /* Zoom effect on image hover */
            }
    </style>

    <!-- Include Google Fonts link -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h2>Featured Destinations</h2>
        <div class="box-container" id="box-container">
            <!-- JavaScript will populate boxes here -->
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script>
    $(document).ready(function () {
        // Destination data for the boxes
        var destinations = [
                { id: 1, title: "West Town Lagoon", imageUrl: "/image/west.jpg" },
                { id: 2, title: "Be Resort Mactan", imageUrl: "/image/mactan.jpg" },
                { id: 3, title: "Crimson Resort and Spa Mactan", imageUrl: "/image/spa.jpg" },
                { id: 4, title: "Atla Cebu", imageUrl: "/image/atla.jpg" },
                { id: 5, title: "Blue Water Maribago Beach Resort", imageUrl: "/image/bluewater.jpg" },
                { id: 6, title: "Blue Orchid Resort", imageUrl: "/image/orchid.jpg" },

            ];

         var boxContainer = $("#box-container");
            destinations.forEach(function (destination) {
                var box = $('<div class="box"></div>');
                var image = $('<img src="' + destination.imageUrl + '" alt="' + destination.title + '">');
                var title = $('<h3>' + destination.title + '</h3>');
                box.append(image);
                box.append(title);
                boxContainer.append(box);

                // Add tilt effect on box hover
                box.on("mousemove", function (event) {
                    var boxRect = this.getBoundingClientRect();
                    var offsetX = event.clientX - boxRect.left;
                    var offsetY = event.clientY - boxRect.top;
                    var centerX = boxRect.width / 2;
                    var centerY = boxRect.height / 2;
                    var tiltX = (offsetX - centerX) / 7;
                    var tiltY = (offsetY - centerY) / 7;
                    $(this).css("transform", "scale(1.05) perspective(1000px) rotateX(" + -tiltY + "deg) rotateY(" + tiltX + "deg)");
                });

                box.on("mouseleave", function () {
                    $(this).css("transform", "scale(1) perspective(1000px) rotateX(0deg) rotateY(0deg)");
                });

            // Add click event to navigate to destination detail page
            box.on("click", function () {
                    var destinationId = destination.id;
                    // Apply transition effect
                    $(this).css("transition", "transform 0.5s ease, opacity 0.5s ease");
                    $(this).css("transform", "scale(1.2)"); // Zoom in effect
                    $(this).css("opacity", "0"); // Fade out effect
                    // Navigate to destination detail page after delay
                    setTimeout(function () {
                        window.location.href = '@Url.Action("DestinationDetail", "Home")' + '?id=' + destinationId;
                    }, 500); // Delay in milliseconds (0.5 seconds)
                });
            });
        });
    </script>
</body>
</html>