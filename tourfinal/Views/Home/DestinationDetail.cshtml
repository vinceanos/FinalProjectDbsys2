@model tourfinal.Models.DestinationDetail
@{
    ViewBag.Title = "Destination Detail - " + Model.DestinationName;
}

<div class="container">
    <h2>@Model.DestinationName</h2>

    <div class="row">
        <div class="col-md-6">
            <!-- Display the main image of the destination -->
            <img src="@Model.ImageURL" class="img-fluid" alt="@Model.DestinationName">
        </div>
        <div class="col-md-6">
            <!-- Display a captivating description of the destination -->
            <p>@Model.Description</p>

            <!-- Highlight key features or attractions of the destination -->
            <h4>Key Features:</h4>
            <ul>
                <li>Feature 1</li>
                <li>Feature 2</li>
                <li>Feature 3</li>
                <!-- Add more features as needed -->
            </ul>

            <!-- Display testimonials or reviews from previous visitors -->
            <h4>What Visitors Say:</h4>
            <div class="testimonial">
                <blockquote>
                    "Testimonial from a satisfied visitor."
                    <footer> - Visitor Name</footer>
                </blockquote>
            </div>

            <!-- Encourage users to book the destination -->
            <div>
                <h4>Ready to Explore?</h4>
                <p>Book your trip now and experience the beauty of @Model.DestinationName!</p>
                <!-- Add a button or link to the booking page -->
                <a href="@Url.Action("BookNow", "Home", new { destinationID = Model.DestinationID })" class="btn btn-primary">Book Now</a>
            </div>
        </div>
    </div>
</div>
