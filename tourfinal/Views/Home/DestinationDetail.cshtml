@model tourfinal.DestinationBookingViewModel
@{
    ViewBag.Title = "Destination Detail - " + Model.Destination.DestinationName;
}

<div class="container">
    <h2>@Model.Destination.DestinationName</h2>

    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Destination.ImageURL" class="img-fluid" alt="@Model.Destination.DestinationName">
        </div>
        <div class="col-md-6">
            <p>@Model.Destination.Description</p>
            <h4>Booking Details:</h4>
            <form action="@Url.Action("BookNow", "Home", new { destinationID = Model.Destination.DestinationID })" method="post">
                @Html.HiddenFor(model => model.Booking.BookingID)
                <label>Date:</label>
                <input type="date" name="Date" value="@Model.Booking.Date.ToString()" required><br>
                <label>Status:</label>
                <input type="text" name="Status" value="@Model.Booking.Status" required><br>
                <label>Feedback:</label>
                <textarea name="Feedback">@Model.Booking.Feedback</textarea><br>

                <!-- Add other booking details as needed -->

                <button type="submit" class="btn btn-primary">Update Booking</button>
            </form>
            <div>
                <h4>Ready to Explore?</h4>
                <p>Book your trip now and experience the beauty of @Model.Destination.DestinationName!</p>
                <a href="@Url.Action("BookNow", "Home", new { destinationID = Model.Destination.DestinationID })" class="btn btn-success">Book Now</a>
            </div>
        </div>
    </div>
</div>
