
@{
    ViewBag.Title = "Email";
}

<h2>Email</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="col-md-6">
            <label>To:</label>
            <input type="email" class="form-control" name="mailTo" value="" />
            <label>Subject:</label>
            <input type="text" class="form-control" name="mailSubject" value="" />
            <label>Body (HTML):</label>
            <textarea class="form-control" name="mailBody"></textarea>
            <input type="submit" class="btn btn-success" name="name" value="SEND" />
        </div>
        @ViewBag.Error
    </div>
}
